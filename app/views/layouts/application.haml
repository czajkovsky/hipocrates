!!!
%html
  %head
    = csrf_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag :application
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{ content: 'text/html; charset=UTF-8', http: { equiv: 'Content-type' } }
    %title Hipocrates App

  %body#main_container{ data: { view_name: "#{controller_name}-#{action_name}" } }
    #controller_wrapper{ class: controller_name }
      #wrapper{ class: action_name }

        %nav.navbar.navbar-default{ role: "navigation" }
          .container
            .navbar-header
              = link_to 'Hipocrates App', root_path, class: 'navbar-brand'
            %ul.nav.navbar-nav
              %li= link_to 'Patients', patients_path
              %li= link_to 'Stuff', stuff_path
              %li= link_to 'Roles', roles_path
              %li= link_to 'Specialities', specialities_path
            %ul.nav.navbar-nav.navbar-right
              %li.dropdown
                = link_to 'tmp email', '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }
                %ul.dropdown-menu
                  %li= link_to 'Sign out', '#', method: :delete
            / %ul.nav.navbar-nav.navbar-right
            /   %li= link_to 'Sign up', '#'
            /   %li= link_to 'Sign in', '#'
        - if notice.present?
          .container
            .row
            .col-xs-12.alert.alert-info#notice= notice

        .container= yield
