%nav.navbar.navbar-default{ role: "navigation" }
  .container
    .navbar-header
      = link_to root_path, class: 'navbar-brand' do
        Hipocrates App
        - if current_user
          %span.label{ class: "label-#{current_user.decorate.label_class}" }= current_user.role.name
    - if current_user
      %ul.nav.navbar-nav
        - if stuff?
          %li= link_to 'Patients', patients_path
          %li= link_to 'Stuff', stuff_path
          %li= link_to 'Recognitions', recognitions_path
          %li= link_to 'Procedures', procedures_path
        - if admin?
          %li= link_to 'Roles', roles_path
          %li= link_to 'Specialities', specialities_path

      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          = link_to current_user.to_s, '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }
          %ul.dropdown-menu
            %li= link_to 'Sign out', log_out_path
    - else
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Sign up', sign_up_path
        %li= link_to 'Log in', log_in_path
