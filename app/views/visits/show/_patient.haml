.row
  .col-lg-12
    .panel.panel-default
      .panel-heading Patient
      .panel-body
        %table.table.table-striped
          %thead
            %tr
              %th Key
              %th Value
          %tbody
            %tr
              %td Name
              %td= "#{visit.patient.name} #{visit.patient.surname}"
            %tr
              %td PESEL
              %td= visit.patient.pesel
            %tr
              %td DOB
              %td
                = visit.patient.date_of_birth
                %span.label.label-default= "(#{visit.patient.age}y)"
            %tr
              %td Sex
              %td
                = visit.patient.sex
