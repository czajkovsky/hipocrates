.row
  .col-lg-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Your data
      .panel-body
        %table.table-bordered.table-striped.table
          %thead
            %tr
              %th Key
              %th Value
          %tbody
            - ['login', 'name', 'surname', 'email', 'pesel', 'nip', 'id_number', 'id_serial', 'date_of_birth', 'place_of_birth', 'street', 'city', 'postal_code', 'phone'].each do |f|
              %tr
                %td= f.gsub(/_/, ' ').capitalize
                %td= current_user.public_send(f)
