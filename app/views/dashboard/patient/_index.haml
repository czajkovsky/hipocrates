.row
  .col-lg-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title Your visits
      .panel-body
        %table.table-bordered.table-striped.table
          %thead
            %tr
              %th Doctor
              %th Date
              %th Status
              %th Actions
          %tbody
            - patient_visits.each do |v|
              %tr
                %td
                  dr #{v.doctor.name} #{v.doctor.surname}
                  %span.label.label-default= v.speciality.name
                %td= v.format_date
                %td= v.status_label
                %td
                  = link_to 'Show', visit_path(v), class: 'btn btn-xs btn-primary'
                  = link_to 'Cancel', visit_path(v), method: :delete, class: 'btn btn-xs btn-danger'
        = link_to 'Request visit', request_visits_path, class: 'btn btn-success'
= render partial: 'users/user_data', locals: { user: current_user }
